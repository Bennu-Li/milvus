#!/bin/bash

arch=linux-amd64
etcd_version=3.5.0
minio_version=RELEASE.2021-02-14T04-01-33Z

# install etcd
if ! [ -x "$(command -v etcd)" ]; then
  echo "install etcd ..."
  wget https://github.com/etcd-io/etcd/releases/download/v${etcd_version}/etcd-v${etcd_version}-${arch}.tar.gz -P /etc/milvus/
  tar xf /etc/milvus/etcd-v${etcd_version}-${arch}.tar.gz -C /etc/milvus/
  mv /etc/milvus/etcd-v${etcd_version}-${arch}/etcd /usr/bin/
  chmod 755 /usr/bin/etcd
  rm -rf /etc/milvus/etcd-v${etcd_version}-${arch}.tar.gz /etc/milvus/etcd-v${etcd_version}-${arch}
fi

# install minio
if ! [ -x "$(command -v minio)" ]; then
  echo "install minio ..."
  wget https://dl.min.io/server/minio/release/${arch}/archive/minio.${minio_version} -O /usr/bin/minio
  chmod 755 /usr/bin/minio
fi

